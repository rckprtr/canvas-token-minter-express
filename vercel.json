{
    "version": 2,
    "builds": [
      {
        "src": "server/src/index.ts",
        "use": "@vercel/node"
      },
      {
        "src": "client/index.html",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/src/index.ts"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/$1"
      }
    ]
  }